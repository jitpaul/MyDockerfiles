<html>
<head>
  <title>TicTacToe</title>
  <meta name="viewport" content="width=600px" />

<style>
body,div {
  text-align: center;
  font-size: 20px;
  font-family: 'Comic Sans MS', Helvetica, sans-serif;
}
table {
  margin-left:auto; 
  margin-right:auto; 
  width: 551px; 
  float: center;
  
}
td {
  height: 175px;
  width: 175px;
  text-align: center;
  font-size: 120px;
  border: 2px solid #cccccc;

}

#myModal, #myModal1, #myModal2, #myModal3 {
top:30%;
outline: none;
}

#players {
  margin-left:auto; 
  margin-right:auto;
  padding: 20px 10px 10px 10px;
  width: 511px; 
  text-align: left;
}
#players > div {
  display: inline-block;
  padding-right: 25px;
  color: #cccccc;
}
#newgame {
  float: right;
}
.current-player {
  color: black !important;
}

img {
    opacity: 0.0;
}

img:hover {
    opacity: 0.5;
}
</style>
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
<script>

$(document).ready(function(){
        $("#myModal").modal();
});


var URL = '{% url "index" %}';
var ids = [];
var a = ' ',b = ' ',c = ' ',d = ' ',e = ' ',f = ' ',g = ' ',h = ' ',i = ' ';
function move(x,y){
    var data = {'row': x, 'column' : y, 'csrfmiddlewaretoken': '{{ csrf_token }}', '00' : a, '01' : b, '02' : c, '10' : d, '11' : e, '12' : f, '20' : g, '21' : h, '22' : i };
    $.post(URL, data, function(response){
	    if(response['temp'] == '-2' || response['temp'] == '1')
		{
		   var id = '' + response['row'] + response['column'];
		   $('.'+ id + ' img').remove();
		   {% load static %}
		   $('.'+ id).append('<img id = "'+ id +'" src="{% static "tictactoe/cross.png" %}"/>');
		   $('#' + id).css("opacity", "1.0");
           a = response['00'];	
           b = response['01'];
           c = response['02'];	
           d = response['10'];	
           e = response['11'];
           f = response['12'];
           g = response['20'];	
           h = response['21'];
           i = response['22'];
           if(response['temp'] == '1'){ alert('Sorry, You Lost!'); location.reload(true);}		   
		}
		else if (response['temp'] == '-1') { alert('Congrats,You Won!');location.reload(true); }
        else { alert('Its a Draw!');location.reload(true); }
    });
}

$(document).ready(function(){

$("#p2").click(function() {
    $("#2").css("color","blue");
    move(-1,-1);
});

$("#p1").click(function() {
    $("#1").css("color", "blue");
});

$("#newgame").click(function() {
   location.reload(true);
});

$("img").click(function() { 
       
    var id = $(this).attr('id');
	if(ids.indexOf(id)== -1){
        $('#' + id).css("opacity", "1.0");
        ids.push(id);
        switch(id) {
            case "00":
                x=0;y=0;
                break;
            case "01":
                x=0;y=1;
                break;
            case "02":
                x=0;y=2;
                break;
            case "10":
                x=1;y=0;
                break;
            case "11":
                x=1;y=1;
                break;
            case "12":
                x=1;y=2;
                break;
            case "20":
                x=2;y=0;
                break;
            case "21":
                x=2;y=1;
                break;
            case "22":
                x=2;y=2;
                break;
            default:
                x=-1;y=-1;
        }
        move(x,y);
	}
});
});
</script>

</head>
<body>
<div class="container">
  <div class="modal fade" id="myModal" role="dialog">
    <div class="modal-dialog modal-sm">
      <div class="modal-content">
        <div class="modal-body">
         <button type="button" id = "p1" class="btn btn-primary" data-dismiss="modal">Player 1</button>
          <button type="button" id = "p2" class="btn btn-primary" data-dismiss="modal">Player 2</button>
        </div>
      </div>      
    </div>
  </div>
</div>

<div class="container">
  <div class="modal fade" id="myModal1" role="dialog">
    <div class="modal-dialog modal-sm">
      <div class="modal-content">
        <div class="modal-body">
		 <p>Congrats! You won</p>
         <button type="button" id = "playagain" class="btn btn-primary" data-dismiss="modal">Play Again</button>
        </div>
      </div>      
    </div>
  </div>
</div>

<div class="container">
  <div class="modal fade" id="myModal2" role="dialog">
    <div class="modal-dialog modal-sm">
      <div class="modal-content">
        <div class="modal-body">
		 <p>Sorry! You Lost</p>
         <button type="button" id = "playagain" class="btn btn-primary" data-dismiss="modal">Play Again</button>
        </div>
      </div>      
    </div>
  </div>
</div>

<div class="container">
  <div class="modal fade" id="myModal3" role="dialog">
    <div class="modal-dialog modal-sm">
      <div class="modal-content">
        <div class="modal-body">
		 <p>It is a draw</p>
         <button type="button" id = "playagain" class="btn btn-primary" data-dismiss="modal">Play Again</button>
        </div>
      </div>      
    </div>
  </div>
</div>  

<div id="players">
  <div id="1">Player 1</div>
  <div id="2">Player 2</div>
  <button id = "newgame" class="btn btn-primary">New Game</button>
</div>
{% load static %}

<table>
  <tr>
    <td id="0" class = "00"><img id = "00" src="{% static "tictactoe/circle.png" %}" alt="My image"/></td>
    <td id="1" class = "01"><img id = "01" src="{% static "tictactoe/circle.png" %}" alt="My image"/></td>
    <td id="2" class = "02"><img id = "02" src="{% static "tictactoe/circle.png" %}" alt="My image"/></td>
  </tr>
  <tr>
    <td id="3" class = "10"><img id = "10" src="{% static "tictactoe/circle.png" %}" alt="My image"/></td>
    <td id="4" class = "11"><img id = "11" src="{% static "tictactoe/circle.png" %}" alt="My image"/></td>
    <td id="5" class = "12"><img id = "12" src="{% static "tictactoe/circle.png" %}" alt="My image"/></td>
  </tr>
  <tr>
    <td id="6" class = "20"><img id = "20" src="{% static "tictactoe/circle.png" %}" alt="My image"/></td>
    <td id="7" class = "21"><img id = "21" src="{% static "tictactoe/circle.png" %}" alt="My image"/></td>
    <td id="8" class = "22"><img id = "22" src="{% static "tictactoe/circle.png" %}" alt="My image"/></td>
  </tr>
</table>
</body>
</html>