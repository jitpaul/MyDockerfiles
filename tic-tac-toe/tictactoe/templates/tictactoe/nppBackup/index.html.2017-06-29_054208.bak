<html>
<head>
  <title>TicTacToe</title>
  <meta name="viewport" content="width=600px" />

<style>
body {
  text-align: center;
  font-size: 16px;
  font-family: 'Comic Sans MS', Helvetica, sans-serif;
}
table {
  margin-left:auto; 
  margin-right:auto; 
  width: 551px; 
  -webkit-user-select: none; 
}
td {
  height: 175px;
  width: 175px;
  text-align: center;
  font-size: 120px;
  border: 2px solid #cccccc;
  -webkit-border-radius: 10px;
}
#players {
  margin-left:auto; 
  margin-right:auto;
  padding: 20px 10px 10px 10px;
  width: 511px; 
  text-align: left;
}
#players > div {
  display: inline-block;
  padding-right: 25px;
  color: #cccccc;
  -webkit-transition-duration: 200ms;
}
.button {
  float: right;
}
.current-player {
  color: black !important;
  -webkit-transform: scale(1.5);
}
.X-marker {
  color: #663366;
}
.X-marker:before {
  content: "X";
}
.O-marker {
  color: #CC0033;
}
.O-marker:before {
  content: "O";
}
img {
    opacity: 0.0;
}

img:hover {
    opacity: 0.5;
}
</style>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<script>

var URL = '{% url "index" %}';
var ids = [];
var a = ' ',b = ' ',c = ' ',d = ' ',e = ' ',f = ' ',g = ' ',h = ' ',i = ' ';
function move(x,y){
    var data = {'row': x, 'column' : y, 'csrfmiddlewaretoken': '{{ csrf_token }}', '00' : a, '01' : b, '02' : c, '10' : d, '11' : e, '12' : f, '20' : g, '21' : h, '22' : i };
    $.post(URL, data, function(response){
	    if(response['temp'] == '-2')
		{
		   var id = '' + response['row'] + response['column'];
		   $('.'+ id + ' img').remove();
		   $('.'+ id + ' img').append("<img src='...' />");
		   $('#' + id).css("opacity", "1.0");
           a = response['00'];	
           b = response['01'];
           c = response['02'];	
           d = response['10'];	
           e = response['11'];
           f = response['12'];
           g = response['20'];	
           h = response['21'];
           i = response['22'];		   
		}
        else if(response['temp'] == '1'){ alert('Sorry, You Lost!'); }
		else if (response['temp'] == '-1') { alert('Congrats,You Won!'); }
        else { alert('Its a Draw!'); }
    });
}

$(document).ready(function(){

$("button").click(function() {
    move(-1,-1);
});

$("img").click(function() { 
       
    var id = $(this).attr('id');
	if(ids.indexOf(id)== -1){
        $('#' + id).css("opacity", "1.0");
        ids.push(id);
        switch(id) {
            case "00":
                x=0;y=0;
                break;
            case "01":
                x=0;y=1;
                break;
            case "02":
                x=0;y=2;
                break;
            case "10":
                x=1;y=0;
                break;
            case "11":
                x=1;y=1;
                break;
            case "12":
                x=1;y=2;
                break;
            case "20":
                x=2;y=0;
                break;
            case "21":
                x=2;y=1;
                break;
            case "22":
                x=2;y=2;
                break;
            default:
                x=-1;y=-1;
        }
        move(x,y);
	}
});
});
</script>

</head>
<body onload="init();">  
<div id="players">
  <div id="X" class="">Player X</div>
  <div id="O" class="">Player O</div>
  <button class="button">New Game</button>
</div>
{% load static %}

<table>
  <tr>
    <td id="0" class = "00"><img id = "00" src="{% static "tictactoe/circle.png" %}" alt="My image"/></td>
    <td id="1" class = "01"><img id = "01" src="{% static "tictactoe/circle.png" %}" alt="My image"/></td>
    <td id="2" class = "02"><img id = "02" src="{% static "tictactoe/circle.png" %}" alt="My image"/></td>
  </tr>
  <tr>
    <td id="3" class = "10"><img id = "10" src="{% static "tictactoe/circle.png" %}" alt="My image"/></td>
    <td id="4" class = "11"><img id = "11" src="{% static "tictactoe/circle.png" %}" alt="My image"/></td>
    <td id="5" class = "12"><img id = "12" src="{% static "tictactoe/circle.png" %}" alt="My image"/></td>
  </tr>
  <tr>
    <td id="6" class = "20"><img id = "20" src="{% static "tictactoe/circle.png" %}" alt="My image"/></td>
    <td id="7" class = "21"><img id = "21" src="{% static "tictactoe/circle.png" %}" alt="My image"/></td>
    <td id="8" class = "22"><img id = "22" src="{% static "tictactoe/circle.png" %}" alt="My image"/></td>
  </tr>
</table>
</body>
</html>