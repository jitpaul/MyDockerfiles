var ids = [];
$(document).ready(function(){
$("img").click(function() { 
       
    var id = $(this).attr('id');
	if(ids.indexOf(id)== -1){
        $('#' + id).css("opacity", "1.0");
        ids.push(id);
        switch(id) {
            case "i0":
                x=0;y=0;
                break;
            case "i1":
                x=0;y=1;
                break;
            case "i2":
                x=0;y=2;
                break;
            case "i3":
                x=1;y=0;
                break;
            case "i4":
                x=1;y=1;
                break;
            case "i5":
                x=1;y=2;
                break;
            case "i6":
                x=2;y=0;
                break;
            case "i7":
                x=2;y=1;
                break;
            case "i8":
                x=2;y=2;
                break;
            default:
                x=-1;y=-1;
        }
        move(x,y);
	}
});
});
</script>

</head>
<body onload="init();">  
<div id="players">
  <div id="X" class="">Player X</div>
  <div id="O" class="">Player O</div>
  <input type="button" class="button" value="New Game">
</div>
{% load static %}

<table>
  <tr>
    <td id="0"><img id = "i0" src="{% static "tictactoe/circle.png" %}" alt="My image"/></td>
    <td id="1"><img id = "i1" src="{% static "tictactoe/circle.png" %}" alt="My image"/></td>
    <td id="2"><img id = "i2" src="{% static "tictactoe/circle.png" %}" alt="My image"/></td>
  </tr>
  <tr>
    <td id="3"><img id = "i3" src="{% static "tictactoe/circle.png" %}" alt="My image"/></td>
    <td id="4"><img id = "i4" src="{% static "tictactoe/circle.png" %}" alt="My image"/></td>
    <td id="5"><img id = "i5" src="{% static "tictactoe/circle.png" %}" alt="My image"/></td>
  </tr>
  <tr>
    <td id="6"><img id = "i6" src="{% static "tictactoe/circle.png" %}" alt="My image"/></td>
    <td id="7"><img id = "i7" src="{% static "tictactoe/circle.png" %}" alt="My image"/></td>
    <td id="8"><img id = "i8" src="{% static "tictactoe/circle.png" %}" alt="My image"/></td>
  </tr>
</table>
</body>
</html>